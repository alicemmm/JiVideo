<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/soft_item_icon_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:scaleType="fitXY"
            android:src="@mipmap/detail_icon2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/soft_item_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Universal decode"
                android:textColor="#ff000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/soft_item_introduce_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:maxLines="2"
                android:text="Hd no video decoding"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/soft_item_download_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:src="@mipmap/download" />

    </LinearLayout>


    <TextView
        android:id="@+id/soft_item_reward_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="76dp"
        android:layout_weight="1"
        android:text="Credits 10 install and open"
        android:textColor="#ff000000"
        android:textSize="12sp" />

</LinearLayout>